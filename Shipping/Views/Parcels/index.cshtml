@using ShippingCo.Models;

<h1>Parcels</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no parcels in your inventory!</p>
}
@if(Model.Count != 0)
{
  @foreach (Parcel parcel in Model)
  {
    <li>@parcel.GetLength() x @parcel.GetHeight() x @parcel.GetWidth() inches, @parcel.GetWeight() pounds - $ @parcel.CalculateShippingCost()</li>
  }
}

</ul>
<a href="/parcels/new">Add a new parcel</a>